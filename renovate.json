{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allDigest",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "cert-manager"
      ],
      "extractVersion": "^v(?<version>.*)$"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/roles/baremetal_operator/defaults/main.yaml/"
      ],
      "matchStrings": [
        "baremetal_operator_version: (?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "metal3-io/baremetal-operator"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/roles/cert_manager/defaults/main.yaml/"
      ],
      "matchStrings": [
        "cert_manager_helm_chart_version: (?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "cert-manager",
      "registryUrlTemplate": "https://charts.jetstack.io"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/roles/dellhw_exporter/defaults/main.yaml/"
      ],
      "matchStrings": [
        "dellhw_exporter_helm_chart_version: (?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "prometheus-dellhw-exporter",
      "registryUrlTemplate": "https://galexrt.github.io/dellhw_exporter"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/roles/flux/defaults/main.yaml/"
      ],
      "matchStrings": [
        "flux_version: (?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "fluxcd/flux2"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/roles/ironic_standalone_operator/defaults/main.yaml/"
      ],
      "matchStrings": [
        "ironic_standalone_operator_version: (?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "metal3-io/ironic-standalone-operator"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/roles/metrics_server/defaults/main.yaml/"
      ],
      "matchStrings": [
        "metrics_server_helm_chart_version: (?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "metrics-server",
      "registryUrlTemplate": "https://kubernetes-sigs.github.io/metrics-server"
    }
  ]
}
